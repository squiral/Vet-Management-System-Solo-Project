<h2 class="title">Register Animal</h2>
  <form class="animal_form" action="/animals" method="post">
      <label for="name-field" class="form_padding">Name:</label>
      <input type="text" name="name" required class="form_padding" id="name-field"/>

      <label for="date_of_birth-field" class="form_padding">Date of Birth:</label>
      <input type="text" name="date_of_birth" class="form_padding" id="date_of_birth-field"/>

      <label for="type-field" class="form_padding">Type:</label>
      <input type="text" name="type" class="form_padding" id="type-field"/>

      <label for="vet-select" class="form_padding">Select Veterinarian:</label>
      <select name="vet_id" class="form_padding" id="vet_select">
        <% @vets.each do |vet| %>
          <option value=<%= vet.id %>><%= vet.name.capitalize %></option>
        <% end %>
      </select>

      <br>

      <label for="treatment_notes-field" class="form_padding">Treatment Notes:</label>
      <textarea name="treatment_notes" class="form_padding" rows="8" cols="80">Add notes here</textarea>

      <input type="submit" value="Register" class="form_padding">

  </form>
