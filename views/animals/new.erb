<form class="animal_form" action="/animals" method="post">

    <label for="name-field">Name:</label>
    <input type="text" name="name" required id="name-field"/>

    <label for="date_of_birth-field">Date of Birth:</label>
    <input type="text" name="date_of_birth" id="date_of_birth-field"/>

    <label for="type-field">Type:</label>
    <input type="text" name="type" id="type-field"/>

    <label for="vet-select">Select Veterinarian</label>
    <select name="vet_id" id="vet_select">
      <% @vets.each do |vet| %>
        <option value=<%= vet.id %>><%= vet.name.capitalize %></option>
      <% end %>
    </select>

    <input type="submit" value="Register">

</form>
